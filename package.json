{
    "name": "frontend",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "git@github.com:mike-north/js-ts-monorepos.git",
    "author": "Naci Akce <n.akceh@anvedo.com>",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "test": "lerna run jest",
        "bootstrap": "yarn install && lerna run bootstrap",
        "lint": "eslint src --ext js,ts",
        "clean": "rimraf dist",
        "build": "lerna run build",
        "start": "lerna run start --parallel",
        "publish:lerna": "dotenv lerna publish -- from-package --yes",
        "version:lerna": "dotenv lerna version"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.0.0",
        "@commitlint/config-conventional": "^12.0.0",
        "@commitlint/config-lerna-scopes": "^12.0.0",
        "commitlint": "^11.0.0",
        "dotenv": "^8.2.0",
        "dotenv-cli": "^4.0.0",
        "eslint": "^7.20.0",
        "husky": "^5.1.1",
        "lerna": "^3.22.1",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "rimraf": "^3.0.2"
    },
    "volta": {
        "node": "14.15.4",
        "yarn": "1.22.4"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "pretty-quick --staged"
        }
    }
}
