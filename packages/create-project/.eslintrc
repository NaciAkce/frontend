{
    "root": true,
    "env": {
        "es2021": true,
        "node": true
    },

    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "quotes": [1, "single"],
        "no-unused-vars": [0],

        "max-statements": [1, 20],
        "max-depth": [1, 4],
        "complexity": [1, 10],
        "no-console": 1,
        "semi": 2,
        "no-empty": 1
    }
}
